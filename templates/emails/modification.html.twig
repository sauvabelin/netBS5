{% extends 'emails/apmbs_layout.html.twig' %}

{% block content %}
<tr>
    <td style="width: 600px; max-width: 100%;">
    <p style="margin: 0 0 20px; border-radius: 4px; background-color: #f59e0b; padding-top: 12px; padding-bottom: 12px; text-align: center; font-size: 20px; font-weight: 700; color: #fffffe; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05)">
        Votre réservation est acceptée sous réserve de modification
    </p>
    </td>
</tr>
<tr>
    <td style="width: 600px; max-width: 100%;">
    <p style="margin: 0 0 20px; font-size: 16px; color: #334155">
        {{ reservation.cabane.correctionEmail }}
    </p>
    </td>
</tr>
<tr>
    <td style="width: 600px; max-width: 100%;">
    <p style="margin: 0 0 12px; font-size: 18px; font-weight: 600; color: #0f172a">Informations de réservation</p>
        <table style="border-radius: 4px; color: #334155; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);" cellpadding="0" cellspacing="0" role="none">
            <thead>
            <tr>
                <th style="width: 100px; border-top-left-radius: 4px; border: solid #e2e8f0; border-width: 0px 0px 1px; background-color: #fffffe; padding-top: 8px; padding-bottom: 8px"></th>
                <th style="width: 250px; border: solid #e2e8f0; border-width: 0px 0px 1px; background-color: #fffffe; padding-top: 8px; padding-bottom: 8px; text-align: left">Avant</th>
                <th style="width: 250px; border-top-right-radius: 4px; border: solid #e2e8f0; border-width: 0px 0px 1px; background-color: #fffffe; padding-top: 8px; padding-bottom: 8px; text-align: left">Après</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td style="width: 100px; border: solid #e2e8f0; border-width: 0px 0px 1px; background-color: #f1f5f9; padding-top: 8px; padding-bottom: 8px; padding-left: 8px; font-weight: 700">Début</td>
                <td style="width: 250px; border: solid #e2e8f0; border-width: 0px 0px 1px; background-color: #f1f5f9; padding-top: 8px; padding-bottom: 8px; color: #64748b; text-decoration: line-through">{{ oldStart|date(param('format', 'php_datetime')) }}</td>
                <td style="width: 250px; border: solid #e2e8f0; border-width: 0px 0px 1px; background-color: #f1f5f9; padding-top: 8px; padding-bottom: 8px;">{{ reservation.start|date(param('format', 'php_datetime')) }}</td>
            </tr>
            <tr>
                <td style="width: 100px; border-bottom-left-radius: 4px; background-color: #f1f5f9; padding-top: 8px; padding-bottom: 8px; padding-left: 8px; font-weight: 700">Fin</td>
                <td style="width: 250px; background-color: #f1f5f9; padding-top: 8px; padding-bottom: 8px; color: #64748b; text-decoration: line-through;">{{ oldEnd|date(param('format', 'php_datetime')) }}</td>
                <td style="width: 250px; border-bottom-right-radius: 4px; background-color: #f1f5f9; padding-top: 8px; padding-bottom: 8px">{{ reservation.end|date(param('format', 'php_datetime')) }}</td>
            </tr>
            </tbody>
        </table>
        <p></p>
    </td>
</tr>
{% if message %}
<tr>
    <td style="width: 600px; max-width: 100%;">
    <p style="margin: 20px 0 0; font-size: 18px; font-weight: 600; color: #0f172a">Message de l'intendant</p>
    <p style="margin: 8px 0 16px; border-radius: 4px; background-color: #fffffe; padding: 20px; font-size: 16px; color: #334155; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05)">
        {{ message }}
    </p>
    </td>
</tr>
{% endif %}
<tr>
    <td>
    <table cellpadding="0" cellspacing="0" role="none">
        <tr>
        <td style="width: 90px; max-width: 100%"></td>
        <td style="width: 200px; max-width: 100%">
            <a href="{{ url('apmbs.api.client.accept', {'id': reservation.id, 'email': reservation.email }) }}" style="display: block; border-radius: 4px; background-color: #10b981; padding: 8px 16px; text-align: center; color: #fffffe; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); text-decoration: none">Accepter</a>
        </td>
        <td style="width: 20px; max-width: 100%"></td>
        <td style="width: 200px; max-width: 100%;">
            <a href="{{ url('apmbs.api.client.reject', {'id': reservation.id, 'email': reservation.email }) }}" style="display: block; border-radius: 4px; background-color: #ef4444; padding: 8px 16px; text-align: center; color: #fffffe; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); text-decoration: none">Refuser</a>
        </td>
        <td style="width: 90px; max-width: 100%;"></td>
        </tr>
    </table>
    </td>
</tr>
{% endblock %}