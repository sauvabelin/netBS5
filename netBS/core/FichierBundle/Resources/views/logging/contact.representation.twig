{% set basic        = basic is defined ? basic : [] %}
{% set datic        = datic is defined ? datic : [] %}

{% set ownerName    = ownerLabel is defined ? ownerLabel : "Lié à" %}
{% set ownerValue   = ownerValue is defined and ownerValue is not null ? ownerValue : "Inconnu" %}

<table class="table table-bordered">
    <tbody>

        <tr class="active">
            <td colspan="2"><b>{{ nameLabel }}</b></td>
        </tr>

        {% if property is null %}
            <tr>
                <td>Action</td>
                <td style="color:white;background:{% if action == 'delete' %}red{% else %}green{% endif %}">{% if action == 'delete' %}Suppression{% else %}Insertion{% endif %}</td>
            </tr>
        {% endif %}

        <tr>
            <td>{{ ownerName }}</td>
            <td>{{ ownerValue }}</td>
        </tr>

        {% include '@NetBSFichier/logging/basic_iterator.partial.twig' with {properties: basic} %}
        {% include '@NetBSFichier/logging/date_iterator.partial.twig' with {properties: datic} %}

    </tbody>
</table>